<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.appemployers.Dashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jobs"
        android:id="@+id/jobs"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="jobView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/jobview"
        android:layout_alignTop="@+id/jobs"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/jobs"
        android:layout_toEndOf="@+id/jobs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST A JOB"
        android:id="@+id/button"
        android:layout_below="@+id/jobs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:onClick="postaJob" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:id="@+id/admin"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:onClick="admin" />
</RelativeLayout>
